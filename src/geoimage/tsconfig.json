{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "declaration": true,
      "declarationDir": "dist",
      "outDir": "dist",
      "baseUrl": "./",
      "noImplicitAny": false,
      "paths": {
        "(shared)/*": ["./(shared)/*"]
      }
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "dist"]
  }